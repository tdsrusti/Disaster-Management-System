<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Emergency SOS</title>
    <link rel="stylesheet" href="../assets/css/sos.css">
</head>
<body>

    <%- include("partials/header") %>

    <!-- SOS Page -->
    <div id="sos-page" class="page">
        <section class="section sos-section">
            <div class="container">
                <div class="section-title">
                    <h2>Emergency SOS</h2>
                    <p>Quickly request help during emergencies. Your location will be shared with your emergency contact.</p>
                </div>
                
                <div class="sos-card">
                    <button class="sos-button" id="sos-emergency">üö® SOS</button>
                    <p>Press the SOS button to send an emergency alert with your current location.</p>
                    
                    <div class="send-message">
                        <h3>Include Additional Information</h3>
                        <textarea class="message-area" id="sos-message" placeholder="Describe your situation..."></textarea>
                        <button class="btn btn-block" id="send-sos-message">Send Message with Location</button>
                    </div>
                </div>
            </div>
        </section>
    </div>

    <%- include("partials/footer") %>

    <script>
        document.getElementById("sos-emergency").addEventListener("click", sendSOSAlert);
document.getElementById("send-sos-message").addEventListener("click", sendSOSAlert);

async function sendSOSAlert() {
    if (!navigator.geolocation) {
        alert("‚ö†Ô∏è Geolocation is not supported by your browser.");
        return;
    }

    navigator.geolocation.getCurrentPosition(async (position) => {
        const latitude = position.coords.latitude;
        const longitude = position.coords.longitude;
        const message = document.getElementById("sos-message").value || "üö® Emergency! Need help!";
        const token = localStorage.getItem("token"); // ‚úÖ Retrieve token

        if (!token) {
            alert("‚ö†Ô∏è No authentication token found. Please log in again.");
            window.location.href = "/login"; // Redirect to login
            return;
        }

        try {
            const response = await fetch("/api/sos", {
                method: "POST",
                headers: {
                    "Content-Type": "application/json",
                    "Authorization": `Bearer ${token}`, // ‚úÖ Include token
                },
                body: JSON.stringify({ latitude, longitude, message }),
            });

            const data = await response.json();
            if (response.ok) {
                alert("üö® SOS alert sent successfully!");
            } else {
                alert("‚ö†Ô∏è Failed to send SOS alert: " + data.message);
            }
        } catch (error) {
            console.error("‚ùå Error sending SOS request:", error);
            alert("‚ùå An error occurred while sending the SOS request.");
        }
    }, () => {
        alert("‚ö†Ô∏è Unable to retrieve your location.");
    });
}

    </script>

</body>
</html>
