<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Profile</title>
    
    <!-- Bootstrap CSS -->
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css">
    
    <style>
        body {
            background-color: #f8f9fa;
        }
        .profile-container {
    background: white;
    border-radius: 10px;
    padding: 30px;
    box-shadow: 0px 4px 8px rgba(0, 0, 0, 0.15);
    max-width: 500px;
    margin: 60px auto 60px 10%; /* Shifted slightly left */
}

.profile-container h3 {
    text-align: center;
    margin-bottom: 25px;
}

.profile-container .form-label {
    font-size: 15px;
    font-weight: bold;
}

.profile-container .form-control {
    font-size: 15px;
    padding: 8px 12px;
    text-align: left;
}


    </style>
</head>
<body>

    <%- include("partials/header.ejs") %>

    <div class="container mt-5">
        <div class="row">
            <!-- Sidebar -->
            <div class="col-md-3">
                <div class="card p-3 text-center shadow-sm">
                    <h2 id="profile-name"><%= user.name %></h2>
                    <p id="profile-email" class="text-muted"><%= user.email %></p>
                </div>
            </div>

            <!-- Profile Content -->
            <div class="col-md-9">
                <div class="profile-container">
                    <h3>Personal Information</h3>
                    <form>
                        <div class="mb-3">
                            <label class="form-label">Full Name</label>
                            <input type="text" class="form-control" value="<%= user.name %>" readonly>
                        </div>
                        <div class="mb-3">
                            <label class="form-label">Phone Number</label>
                            <input type="tel" class="form-control" value="<%= user.mobile %>" readonly>
                        </div>
                        <div class="mb-3">
                            <label class="form-label">Emergency Contact</label>
                            <input type="tel" class="form-control" value="<%= user.emermob %>" readonly>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>

    <%- include("partials/footer.ejs") %>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
