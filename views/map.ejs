
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Disaster Resource Locator</title>
    <link rel="stylesheet" href="/assets/css/map.css">
    <!-- Leaflet CSS -->
    <link rel="stylesheet" href="https://unpkg.com/leaflet/dist/leaflet.css" />
</head>
<body>
    <%- include("partials/header.ejs") %>

    <div class="container">
        <div class="section-title">
            <h2>Find Resources Near You</h2>
            <p>Locate shelters, food distribution centers, and medical facilities in your area.</p>
        </div>
        
        <div class="resource-filter">
            <button class="filter-btn active" data-filter="all">All Resources</button>
            <button class="filter-btn" data-filter="shelter">Shelters</button>
            <button class="filter-btn" data-filter="food">Food</button>
            <button class="filter-btn" data-filter="medical">Medical</button>
        </div>
        
        <div id="map" style="height: 500px;"></div>
        
        <div class="loading-spinner" id="map-loading">
            Loading resources...
        </div>
    </div>

    <%- include("partials/footer.ejs") %>

    <!-- Leaflet JS -->
    <script src="https://unpkg.com/leaflet/dist/leaflet.js"></script>
    <!-- Custom JavaScript -->
    <script src="../assets/JS/map.js"></script>
</body>
</html>
